{% extends 'KDSMContentBundle::main.base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/vis/3.11.0/vis.min.css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vis/3.11.0/vis.min.js"></script>

    <script type="text/javascript">
        var container = document.getElementById('visualization');
        var items = [
            {#{% for key, value in stats0 %}#}
                {#{x: key, y:value},#}
            {#{% endfor %}#}
            {x: 0, y: {{stats[0][0] }}},
            {x: 1, y: {{stats[0][1] }}},
//            {x: 0, y: 40},
//            {x: 1, y: 60}
        ];

        var dataset = new vis.DataSet(items);
        var options = {
            style:'bar',
            barChart: {width:50, align:'center'},

            dataAxis: {
                showMinorLabels : false
            },

//            start: '2014-06-10',
//            end: '2014-06-18',
            drawPoints: false
        };
        var graph2d = new vis.Graph2d(container, dataset, options);
    </script>

{% endblock %}

{% block content %}
    <div id="visualization" class="col-sm-6" style="background-color: #f5f5f5"></div>
{% endblock %}