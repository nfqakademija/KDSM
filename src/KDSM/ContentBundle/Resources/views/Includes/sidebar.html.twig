{% block sidebar %}
<aside class="col-sm-2 sidebar left">
    <div class="row user-info">
        <img class="user-photo" src="{{ asset('bundles/kdsmcontent/images/empty-user.jpg') }}" alt=""/>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <span class="user-name text-center"><em> {{ app.user.username }}</em></span>
        {% endif %}
        <span class="notifications-icon"><i class="fa fa-bell"></i></span>
    </div>
    <nav class="row sidebar-nav">
        <ul class="nav">
            <li {% if app.request.attributes.get('_route') == '/'  %} class='active' {% endif %}>
                <a href="{{ path('kdsm_content_homepage') }}">
                    <i class="fa fa-home"></i>
                    <span>Home</span>
                </a>
            </li>
            <li {% if app.request.attributes.get('_route') == 'statistics'  %} class='active' {% endif %}>
                <a href="{{ path('statistics') }}">
                    <i class="fa fa-line-chart"></i>
                    <span>Statistics</span>
                </a>
            </li>
            <li>
                <a href="{{ path('logout') }}">
                    <i class="fa fa-sign-out"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>
</aside>
{% endblock %}