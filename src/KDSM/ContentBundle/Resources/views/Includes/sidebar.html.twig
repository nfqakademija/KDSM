{% block sidebar %}
<aside class="col-sm-2 sidebar">
    <div class="row user-info">
        <img class="user-photo" src="{{ asset('bundles/kdsmcontent/images/empty-user.jpg') }}" alt=""/>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <span class="user-name text-center"><em> {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</em></span>
            <span class="user-name text-center">
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </span>
        {% endif %}
        <span class="notifications-icon"><i class="fa fa-bell"></i></span>
    </div>
    <nav class="row sidebar-nav">
        <ul class="nav">
            <li class="active">
                <a href="{{ path('logged_homepage') }}">
                    <i class="fa fa-home"></i>
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a href="{{ path('queue') }}">
                    <i class="fa fa-sitemap"></i>
                    <span>Queue</span>
                </a>
            </li>
            <li>
                <a href="#category1">
                    <i class="fa fa-line-chart"></i>
                    <span>Statistics</span>
                </a>
            </li>
            <li>
                <a href="{{ path('logout') }}">
                    <i class="fa fa-sign-out"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>
</aside>
{% endblock %}